<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".GomokuApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GomokuRoyale"
        tools:targetApi="31">
        <activity
            android:name="com.isel.GomokuRoyale.home.ui.HomeActivity"
            android:alwaysRetainTaskState="true"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.GomokuRoyale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.isel.GomokuRoyale.game.ui.GameActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan">
        </activity>
       <activity
        android:name="com.isel.GomokuRoyale.preferences.model.PreferencesActivity"
        android:exported="false"
        android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
        android:name="com.isel.GomokuRoyale.Favourites.ui.FavouritesListActivity"
        android:exported="false"
        android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
        android:name="com.isel.GomokuRoyale.Favourites.ui.FavouritesActivity"
        android:exported="false"
        android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
        android:name="com.isel.GomokuRoyale.about.ui.AboutActivity"
        android:exported="false">
        </activity>
    </application>

</manifest>

